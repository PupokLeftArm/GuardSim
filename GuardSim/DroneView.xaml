<Window x:Class="GuardSim.DroneViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drone View" Width="640" Height="420"
        Background="#101214" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4,0,4,6">
            <TextBlock x:Name="DroneNameText" Foreground="#dbe3ea" FontSize="14" FontWeight="Bold"/>
            <Button Content="✖" Click="CloseBtn_Click" Margin="8,0,0,0"
              Width="28" Height="24" Background="#2a2f35" Foreground="#dbe3ea"
              HorizontalAlignment="Right"/>
        </StackPanel>

        <Canvas x:Name="VideoCanvas" Grid.Row="1" Background="#0B0F12"/>

        <DockPanel Grid.Row="2" Margin="0,6,0,0">
            <TextBlock x:Name="DetectionStatusText" Foreground="Lime" Margin="0,0,8,0"/>
            <TextBlock Text=" | " Foreground="#3A434B"/>
            <TextBlock x:Name="TimestampText" Foreground="#9fb3c8" Margin="8,0,8,0"/>
            <TextBlock Text=" | " Foreground="#3A434B"/>
            <TextBlock x:Name="PositionText" Foreground="#9fb3c8" Margin="8,0,8,0"/>
            <TextBlock Text=" | " Foreground="#3A434B"/>
            <TextBlock x:Name="ConfidenceText" Foreground="#9fb3c8" Margin="8,0,0,0"/>
        </DockPanel>
    </Grid>
</Window>